<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="line_e1e1e1_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#e1e1e1</item>
    </style>
    <!--基础样式，定义了转场动画和禁用actionbar,采用toolBar-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="toolbarStyle">@style/Style.Aty.ActionBar</item>
    </style>
    <!--头部标题栏基础样式-->
    <style name="Style.Aty.ActionBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="background">@android:color/white</item>
        <!--解决左边一直有一块边距的问题 contentInsetStart = 0 -->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
</resources>
