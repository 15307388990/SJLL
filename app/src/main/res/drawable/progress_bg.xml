<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="7.2dip" />
            <stroke android:color="#DDDDDD" android:width="0.5dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:top="0.5dp" android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp">
        <clip>
            <shape>
                <corners android:radius="7.2dip" />
                <solid android:color="#3776FB"/>
            </shape>
        </clip>
    </item>
</layer-list>